<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.needham.thomas.medicare"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".root.Activities.MainActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".root.Activities.LoginActivity">
        </activity>
        <activity android:name=".root.Activities.RegisterActivity">
        </activity>
        <activity android:name=".root.Activities.HomeActivity">
        </activity>
        <activity android:name=".root.Activities.NewRecordActivity">
        </activity>
        <activity android:name=".root.Activities.ViewRecordActivity">
        </activity>
        <activity android:name=".root.Activities.CustomisationActivity">
        </activity>
        <activity android:name=".root.Activities.FontSizeActivity">
        </activity>
        <activity android:name=".root.Activities.ColourActivity">
        </activity>
        <activity android:name=".root.Activities.SendTextActivity">
        </activity>
        <activity android:name=".root.Activities.ModifyInfoActivity">
        </activity>
        <activity android:name=".root.Activities.AdminControlPanelActivity">
        </activity>
        <activity android:name=".root.Activities.ResetPasswordActivity">
        </activity>
    </application>

</manifest>
